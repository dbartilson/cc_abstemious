{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msvc",
            "request": "launch",
            "name": "Debug executable 'cc_abstemious'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cc_abstemious",
                    "--package=cc_abstemious"
                ],
                "filter": {
                    "name": "cc_abstemious",
                    "kind": "bin"
                }
            },
            "args": [
                "./docs/input_1.json"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "msvc",
            "request": "launch",
            "name": "Debug unit tests in executable 'cc_abstemious'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cc_abstemious",
                    "--package=cc_abstemious"
                ],
                "filter": {
                    "name": "cc_abstemious",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
    ]
}